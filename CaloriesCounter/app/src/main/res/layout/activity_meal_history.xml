<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Прогресс-бары для калорий, белков, жиров и углеводов -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp">

        <!-- Прогресс-бар для калорий -->
        <ProgressBar
            android:id="@+id/progressCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="50"/>

        <TextView
            android:id="@+id/txtCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="2000 Kcal"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>
    </RelativeLayout>

    <!-- Прогресс-бар для белков -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp">

        <ProgressBar
            android:id="@+id/progressProteins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="50"/>

        <TextView
            android:id="@+id/txtProteins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="150g"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>
    </RelativeLayout>

    <!-- Прогресс-бар для жиров -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp">

        <ProgressBar
            android:id="@+id/progressFats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="50"/>

        <TextView
            android:id="@+id/txtFats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="70g"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>
    </RelativeLayout>

    <!-- Прогресс-бар для углеводов -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp">

        <ProgressBar
            android:id="@+id/progressCarbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="false"
            android:max="100"
            android:progress="50"/>

        <TextView
            android:id="@+id/txtCarbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="250g"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>
    </RelativeLayout>

    <!-- История приемов пищи -->
    <RecyclerView
        android:id="@+id/recyclerViewHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

    <!-- Кнопка для добавления нового приема пищи -->
    <Button
        android:id="@+id/btnAddMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить прием пищи"
        android:layout_marginTop="20dp"/>
</LinearLayout>
